<h3>Welcome: <%= @user.email %></h3>
<h5>This is your profile page.</h5>
<div class="row">
  <div class="col s12 m7">
    <div class="card">
      <div class="card-image">
        <img src="<%= @user.city.image_url %>">
      </div>
      <div class="card-content">
        <p class="card-title">Email: <%= @user.email %></p>
        <p class="card-title">Join Date: <%= @user.created_at %></p>
        <p class="card-title">Current City: <%= link_to @user.city.name, city_path(@city) %></p>
        <% if owned_by?(@user) %>
          <%= link_to 'edit', edit_user_path, method: "get" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
