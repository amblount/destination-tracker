<h1><%= @city.name %></h1>
<div>
	<%= image_tag(@city.image_url) %>
</div>
<% @city.posts.each do |post| %>
<div class="row">
  <div class="col s12 m7">
    <div class="card">
      <div class="card-content">
        <strong>Post Name: </strong><%= link_to post.name, user_post_path(post.user_id, post) %><br>
          <strong>by user: <strong> <%= post.user.email%><br>
          <%= post.content%><br><br>
      </div>
    </div>
  </div>
</div>
<% end %>