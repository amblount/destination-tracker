<h1><%= @city.name %></h1>
<%= button_to 'New Post', new_city_post_path(@city.id), method: 'get' %> <br> <br>
<div class="city-img">
	<%= image_tag(@city.image_url) %>
</div>
<br><br>
<div class="container">
  <div class="row">
    <% @city.posts.each do |post| %>
    <div class="chip">
      <img src="<%= post.user.image_url %>" alt="Contact Person"><%= post.user.email %>
    </div>
    <div class="row">
      <div class="col s12 m5">
        <div class="card-panel teal">
          <span class="white-text">
            <%= link_to post.name, user_post_path(post.user_id, post) %>
            <p><%= post.content%></p>
          </span>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
